<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="beerBorderPane" prefHeight="400.0" prefWidth="716.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.plapa_kermit.gestion_bar.ManagementPageController">
    <top>
        <Label text="Beer List" />
    </top>
    <center>
        <TableView fx:id="beerTable" prefHeight="343.0" prefWidth="596.0">
            <columns>
                <TableColumn fx:id="beerNameColumn" prefWidth="143.0" text="Name" />
                <TableColumn fx:id="beerTypeColumn" prefWidth="143.0" text="Type" />
                <TableColumn fx:id="beerAlcoholColumn" prefWidth="143.0" text="Alcohol" />
                <TableColumn fx:id="beerPriceColumn" prefWidth="143.0" text="Price" />
                <TableColumn fx:id="beerStockColumn" prefWidth="143.0" text="Stock" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <Button alignment="TOP_CENTER" mnemonicParsing="false" text="Back" onAction="#onBackButton" />
            <Button fx:id="MajButton" onAction="#onMajButton" text="Mise à Jour" />
            <Button fx:id="SupButton" onAction="#onSupButton" text="Supprimée" />
            <Button fx:id="AddButton" onAction="#onAddButton" text="Ajoutée" />
        </HBox>
    </bottom>
</BorderPane>
